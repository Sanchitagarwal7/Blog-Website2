<%- include('partials/header'); -%>


<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" name="postTitle" rows="1"></input>
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" name ="postBody" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>


